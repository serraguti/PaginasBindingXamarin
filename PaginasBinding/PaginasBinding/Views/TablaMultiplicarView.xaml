<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.TablaMultiplicarView"
             xmlns:viewmodels="clr-namespace:PaginasBinding.ViewModels">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <viewmodels:TablaMultiplicarViewModel/>
            </StackLayout.BindingContext>
            <Label Text="Número:"/>
            <Entry Text="{Binding Numero}"
                   HorizontalOptions="FillAndExpand"/>
            <Button HorizontalOptions="FillAndExpand"
                    Text="Tabla multiplicar"
                    Command="{Binding MostrarTabla}"/>
            <ListView ItemsSource="{Binding Tabla}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
<Label Text="{Binding Operacion}" FontSize="20" TextColor="Blue"/>
<Label Text="{Binding Resultado}" FontSize="20" TextColor="Red"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>